FROM node:21-alpine

WORKDIR /app

ARG NEXT_PUBLIC_CAPTCHA_SITE_KEY
ARG NEXT_PUBLIC_BASE_DEV_URL
ARG NEXT_PUBLIC_BASE_TEST_URL
ARG NEXT_PUBLIC_BASE_URL

ENV NEXT_PUBLIC_CAPTCHA_SITE_KEY=$NEXT_PUBLIC_CAPTCHA_SITE_KEY
ENV NEXT_PUBLIC_BASE_DEV_URL=$NEXT_PUBLIC_BASE_DEV_URL
ENV NEXT_PUBLIC_BASE_TEST_URL=$NEXT_PUBLIC_BASE_TEST_URL
ENV NEXT_PUBLIC_BASE_URL=$NEXT_PUBLIC_BASE_URL

COPY . .

ENV NEXT_SHARP_PATH=/tmp/node_modules/sharp

RUN npm install --force
RUN npm run build

CMD ["npm", "start"]
